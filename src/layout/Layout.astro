---
import "../css/tailwind.css";
import "../css/menu.css";
import "../css/custom.css";
import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro";
import "jos-animation/dist/jos.css";
import "@fontsource/plus-jakarta-sans/800.css";
import "@fontsource/inter/400.css";
import "@fortawesome/fontawesome-free/css/all.css";
import { getEntryBySlug } from "astro:content";
const { title } = Astro.props;
const MetaData = await getEntryBySlug("site", "meta");
const { siteName, description, favicon } = MetaData?.data;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{siteName}{" "} | {" "}{title}</title>
    <meta
      name='description'
      content={description ? description : "Agency06 Theme"}
    />
    <link rel='icon' href={favicon || "/favicon.svg"} />
    
    <!-- Preload hero image -->
    <link
      rel="preload"
      as="image"
      href="/assets/img/th-3/hero-mobile.png"
      type="image/png"
    />
    <!-- Preload hero background elements -->
    <link
      rel="preload"
      as="image"
      href="/assets/img/elements/hero-3-bg-shape.svg"
      type="image/svg+xml"
    />
    <link
      rel="preload"
      as="image"
      href="/assets/img/elements/hero-3-shapes-1.svg"
      type="image/svg+xml"
    />
    <link
      rel="preload"
      as="image"
      href="/assets/img/elements/hero-3-shapes-2.svg"
      type="image/svg+xml"
    />
  </head>
  <body>
    <div class='page-wrapper relative z-[1] bg-white'>
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<script src='/assets/js/menu.js' is:inline></script>
<script src='/assets/js/countdown.js' is:inline></script>
<script src='/assets/js/counterup.js' is:inline></script>
<script src='/assets/js/main.js' is:inline></script>
<script>
  import JOS from "jos-animation";
  JOS.init({
    passive: false,
    once: true,
    animation: "fade-up",
    timingFunction: "ease",
    threshold: 0,
    delay: 0.5,
    duration: 0.7,
    scrollDirection: "down",
    rootMargin: "0% 0% 15% 0%",
  });
</script>
